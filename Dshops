# Creating a zip file containing the website files
import shutil

# Define the path for the zip file
zip_file_path = "/mnt/data/dshops_website.zip"

# Create a directory with website files (HTML, CSS, JS, etc.)
website_files = {
    "index.html": """<!DOCTYPE html>
<html lang="ka">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DShops - სათვალთვალო კამერების მაღაზია</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1>კეთილი იყოს თქვენი მობრძანება DShops-ში!</h1>
    </header>
    <main>
        <section class="product">
            <h2>სათვალთვალო კამერა X-200</h2>
            <p>Full HD, ღამის ხედვა, წყალგამძლე</p>
            <button class="buy-btn">ყიდვა</button>
        </section>
    </main>
    <script src="script.js"></script>
</body>
</html>""",
    
    "styles.css": """body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
    text-align: center;
    padding: 50px;
}
header {
    background: #007bff;
    color: white;
    padding: 20px;
}
.product {
    margin: 20px auto;
    max-width: 400px;
    background: white;
    padding: 20px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
}
.buy-btn {
    display: inline-block;
    padding: 10px 20px;
    background: #28a745;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}""",
    
    "script.js": """document.querySelector('.buy-btn').addEventListener('click', function() {
    alert('პროდუქტი დაემატა კალათაში!');
});"""
}

# Create a temporary directory and add files
import os

temp_dir = "/mnt/data/dshops_website"
os.makedirs(temp_dir, exist_ok=True)

for filename, content in website_files.items():
    with open(os.path.join(temp_dir, filename), "w", encoding="utf-8") as f:
        f.write(content)

# Create a zip file
shutil.make_archive(zip_file_path.replace(".zip", ""), 'zip', temp_dir)

# Return the zip file path
zip_file_path
